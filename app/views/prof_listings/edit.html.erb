<h1>Edit your Professional Listing</h1>

<div class="content">
<%= simple_form_for(@proflisting) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :company, collection: ProfListing::COMPANIES %>
    <%= f.input :role, collection: ProfListing::ROLES %>
    <%= f.input :industry, collection: ProfListing::INDUSTRIES %>
    <%= f.input :active, as: :radio_buttons %>
  </div>

  <div class="form-action">
    <%= f.button :submit %>
  </div>
<% end %>
</div>
